@model Trip
@{
    string dest = TempData["Destination"] as string;
    string accom = TempData["Accommodation"] as string;
    DateTime start = (DateTime)TempData["StartDate"];
    DateTime end = (DateTime)TempData["EndDate"];
    ViewBag.Title = "Add Info for " + dest;
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post" asp-action="Page2">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Destination" value="@dest" />
            <input type="hidden" asp-for="Accommodation" value="@accom" />
            <input type="hidden" asp-for="StartDate" value="@start" />
            <input type="hidden" asp-for="EndDate" value="@end" />

            <div class="form-group">
                <label asp-for="AccommodationPhone">Phone Number</label>
                <input id="phoneInput" type="tel" asp-for="AccommodationPhone" class="form-control" placeholder="Enter phone number">
            </div>
            <div class="form-group">
                <label asp-for="AccommodationEmail">Email Address</label>
                <input asp-for="AccommodationEmail" class="form-control" placeholder="Enter email address">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Next</button>
                <a asp-controller="Trip" asp-action="Index" class="btn btn-danger ml-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
