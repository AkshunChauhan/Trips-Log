@model Trip
@{
    ViewBag.Title = "Add Trip Destination and Dates";
}
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post" asp-action="Page1">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Destination">Destination*</label>
                <input asp-for="Destination" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Accommodation">Accommodation</label>
                <input asp-for="Accommodation" class="form-control">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="StartDate">Start Date*</label>
                    <input asp-for="StartDate" type="date" class="form-control">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="EndDate">End Date*</label>
                    <input asp-for="EndDate" type="date" class="form-control">
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Next</button>
                <a asp-controller="Trip" asp-action="Index" class="btn btn-danger ml-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
